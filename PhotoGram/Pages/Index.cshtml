@page
@model IndexModel
@{ ViewData["Title"] = "PHOTOGRAM"; }

<div class="row">

        <br /><br />
        <div class="centered">
            <ul class="image-list">
                @foreach (var image in Model.Images)
                {
    <li class="image-list-item">
        <a href="#" target="_blank">
            <div class="image-card">
                <img class="lazy" src="@image.ImagePath" style="height: 270px;" />
                <h6><img src="~/like.png" style=" display: inline-block;width: 25px;" /><img src="~/love.png" style=" display: inline-block;width: 25px;" /></h6>
                <br />
                <h6>@image.UserHash</h6>
                <div class="form-group">
                    <input class="form-control" placeholder=" Ajouter un Commentaire ..." style="border:none" />
                </div>
            </div>

        </a>
    </li>}
            </ul>
        </div>
     


   

    </div>
    @section Scripts{
        <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery.lazy/1.7.7/jquery.lazy.min.js" integrity="sha256-sSF4G6GdnMRF5ZKZOLYGcPvU0BTvmPMFaQ6025ZB+Nk=" crossorigin="anonymous"></script>
        <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery.lazy/1.7.7/plugins/jquery.lazy.ajax.min.js" integrity="sha256-uQvfHo7VKZFNpuEmueDtC1/4i21aJiaG38ubIskMSF0=" crossorigin="anonymous"></script>
        <script src="~/js/site.js" asp-append-version="true"></script>
    }
