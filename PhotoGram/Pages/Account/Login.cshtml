@page
@model LoginModel

@{
    ViewData["Title"] = "Connection PhotoGram";
}

<div class="row">
    <div class="col-md-5 col-md-offset-2">
        <br /><br />

        <img src="~/insta-01.jpg" style="width: 100%; max-height: 513px;" />
    </div>
    <div class="col-md-4">

        <br /><br />
        <section>
            <form method="post">
                <img src="~/LOGO PHOTOGRAM.jpg" style="width: 265px; padding-bottom: 10px;" />

                <h4>Utilisez un compte  pour vous connecter.</h4>
                <hr />
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="form-group">
                    <input asp-for="Input.Email" class="form-control" placeholder="Votre adresse email" />
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input asp-for="Input.Password" class="form-control" placeholder="Votre Mot de Passe" />
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <div class="form-check">
                        <input type="checkbox" class="form-check-input" id="exampleCheck1">
                        <label class="form-check-label" for="exampleCheck1">Souviens-toi de moi</label>
                    </div>
                </div>
                <div class="form-group">
                    <button type="submit" class="btn btn-primary" style="width: 100%; background: #ffc107; color: #19032a;">Connection</button>
                </div>
                <div class="form-group">
                    <p>
                        <a asp-page="./ForgotPassword">Mot de passe oublier ?</a>
                    </p>
                    <p>
                        <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Inscrivez-vous en tant que nouvel utilisateur</a>
                    </p>
                </div>
            </form>
        </section>
    </div>

</div>

@section Scripts {
    @await  Html.PartialAsync("_ValidationScriptsPartial")
}
